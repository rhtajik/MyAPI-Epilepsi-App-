@page
@model MyAPI.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Opret bruger";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Opret bruger</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Fornavn" />
                    <label asp-for="Input.FirstName">Fornavn</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Efternavn" />
                    <label asp-for="Input.LastName">Efternavn</label>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" class="form-select" id="roleSelect" onchange="togglePatientField()">
                        <option value="">-- Vælg rolle --</option>
                        <option value="Nurse">Sygeplejerske</option>
                        <option value="Relative">Pårørende</option>
                        <option value="Patient">Patient</option>
                        <option value="Admin">Administrator</option>
                    </select>
                    <label asp-for="Input.Role">Rolle</label>
                </div>

                <!-- PATIENT ID FELT - vises kun for pårørende -->
                <div id="patientField" class="mb-3" style="display: none;">
                    <div class="form-floating">
                        <input asp-for="Input.AssignedPatientId" class="form-control" placeholder="Patient ID" type="number" />
                        <label asp-for="Input.AssignedPatientId">Patient ID (tal)</label>
                    </div>
                    <small class="text-muted">Indtast patientens database ID (f.eks. 1, 2, 3...)</small>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Bekræft password" />
                    <label asp-for="Input.ConfirmPassword">Bekræft Password</label>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">Opret bruger</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePatientField() {
            var role = document.getElementById('roleSelect').value;
            var patientField = document.getElementById('patientField');
            var patientInput = document.querySelector('input[name="Input.AssignedPatientId"]');

            if (role === 'Relative') {
                patientField.style.display = 'block';
                patientInput.setAttribute('required', 'required');
            } else {
                patientField.style.display = 'none';
                patientInput.removeAttribute('required');
            }
        }
    </script>
}