@page
@model MyAPI.Web.Pages.Medications.IndexModel
@{
    ViewData["Title"] = "Medicin Liste";
}

<div class="container">
    <h1>💊 Medicin</h1>

    <div class="card">
        <div class="card-body">
            @if (Model.Medications.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Navn</th>
                            <th>Dosis</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var med in Model.Medications)
                        {
                            <tr>
                                <td>@med.PatientId</td>
                                <td>@med.Name</td>
                                <td>@med.Dosage</td>
                                <td>
                                    @if (med.IsActive)
                                    {
                                        <span class="badge bg-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Afsluttet</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Ingen medicin registreret</p>
            }
        </div>
    </div>
</div>