@page "{id:int}"
@model MyAPI.Web.Pages.Seizures.EditModel
@using MyAPI.Core.Entities
@{
    ViewData["Title"] = "Rediger Anfald";
}

<div class="container">
    <h1 class="mb-4">✏️ Rediger Anfald</h1>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Anfald for @Model.PatientName</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="SeizureId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Start tid</label>
                                <input type="text" class="form-control" value="@Model.StartTime.ToString("dd-MM-yyyy HH:mm:ss")" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Slut tid</label>
                                <input type="text" class="form-control" value="@(Model.EndTime?.ToString("dd-MM-yyyy HH:mm:ss") ?? "I gang")" readonly />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Anfaldstype <span class="text-danger">*</span></label>
                            <select asp-for="SeizureType" class="form-select" asp-items="Html.GetEnumSelectList<SeizureType>()" required>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Symptomer</label>
                            <select asp-for="SelectedSymptomIds" class="form-select" multiple size="4" asp-items="Model.SymptomList">
                            </select>
                            <div class="form-text">Hold Ctrl for at vælge flere</div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="ConsciousnessLoss" class="form-check-input" />
                            <label asp-for="ConsciousnessLoss" class="form-check-label fw-bold">Bevidsthedstab</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Noter</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Registreret af</label>
                            <input type="text" class="form-control" value="@Model.RegisteredByName" readonly />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">💾 Gem ændringer</button>
                            <a asp-page="/Patients/Details" asp-route-id="@Model.PatientId" class="btn btn-secondary">Annuller</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>