@model IEnumerable<MyAPI.Web.Models.UserViewModel>
@{
    ViewData["Title"] = "Brugeradministration";
}

<h2>Brugeradministration</h2>

<a asp-action="CreateUser" class="btn btn-primary mb-3">Opret ny bruger</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Rolle</th>
            <th>Tilknyttet Patient ID</th>
            <th>Oprettet</th>
            <th>Handlinger</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.AssignedPatientId.HasValue)
                    {
                        <span class="badge bg-info">@user.AssignedPatientId</span>
                    }
                    else if (user.Role == "Relative")
                    {
                        <span class="text-warning">Ikke tilknyttet!</span>
                    }
                </td>
                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Rediger</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Er du sikker?');">
                        <button type="submit" class="btn btn-sm btn-danger">Slet</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>